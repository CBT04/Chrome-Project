{
"manifest_version": 3,
"name": "Side panel Notepad",
"version": "1.0",
"description": "A Notepad-like extension for chrome that utilises the side bar.",
"permissions":
[   
    "storage",
    "sidePanel",
    "clipboardWrite",
    "clipboardRead"
],
"icons": 
{
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
},
"side_panel": 
{
      "default_path": "sidePanel.html"
},
"background":
{
    "service_worker": "background.js"
}
}